{
  "name": "Significance",
  "version": "1.0",
  "manifest_version" : 2,

  "description": "A Smart Tab Organizer for Chrome",
  "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },

  // Create Icon to Display Popup Window
  "browser_action": {
          "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
          },
          "default_title": "Significance",
          "default_popup": "popup/popup.html"
  },

  // Ask for Permissions
  "permissions": [
          "tabs"
  ],

  // Setup Background Scripts
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
